# this file is based on the examples provided on scikit-learn's .coveragerc

[run]
omit =
    */tests*
    */__init__.py
source = bacdive
branch = True
include = */bacdive/*

[report]
show_missing = True
exclude_lines =
    print
    raise AssertionError
    raise NotImplementedError
    raise AssertionError
    raise ValueError
    pragma: no cover
    if __name__ == .__main__.:
omit =
    */tests*
    */__init__.py
